<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="false"
    android:background=" #a3e4d7 "
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="25dp"
        android:alpha="0.3"
        android:scaleX="2"
        android:scaleY="2"
        android:text="XyloPhone"
        android:textStyle="bold|italic" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="339dp"
        android:layout_height="790dp"
        android:paddingTop="20dp"
        android:scaleX="2"
        android:scaleY="2.5"
        app:srcCompat="@drawable/bar" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="339dp"
        android:layout_height="790dp"
        android:paddingLeft="150dp"
        android:paddingTop="6dp"
        android:paddingRight="80dp"
        android:scaleX="5.6"
        android:scaleY="7.75"
        app:srcCompat="@drawable/bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/c_key"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="50sp"
            android:background="#e74c3c"
            android:onClick="playC"
            android:text="C"
            android:textColor=" #55e5e8e8 "
            android:textFontWeight="0"
            android:textSize="24sp" />

        <Button
            android:id="@+id/d_key"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="5sp"
            android:background="#e67e22"
            android:onClick="playD"
            android:text="D"
            android:textColor=" #55e5e8e8 "
            android:textSize="24sp" />

        <Button
            android:id="@+id/e_key"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="10sp"
            android:background="#f1c40f"
            android:onClick="playE"
            android:text="E"
            android:textColor=" #77e5e8e8 "
            android:textSize="24sp" />

        <Button
            android:id="@+id/f_key"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="15sp"
            android:background="#1abc9c"
            android:onClick="playF"
            android:text="F"
            android:textColor=" #55e5e8e8 "
            android:textSize="24sp" />

        <Button
            android:id="@+id/g_key"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="20sp"
            android:background="#2ecc71"
            android:onClick="playG"
            android:text="G"
            android:textColor=" #55e5e8e8 "
            android:textSize="24sp" />

        <Button
            android:id="@+id/a_key"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="25sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="25sp"
            android:background="#3498db"
            android:onClick="playA"
            android:text="A"
            android:textColor=" #55e5e8e8 "
            android:textSize="24sp" />

        <Button
            android:id="@+id/b_key"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="30sp"
            android:background="#9b59b6"
            android:onClick="playB"
            android:text="B"
            android:textColor=" #55e5e8e8 "
            android:textSize="24sp" />

    </LinearLayout>


</RelativeLayout>
